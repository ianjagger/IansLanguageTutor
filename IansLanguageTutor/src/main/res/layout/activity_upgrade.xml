<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".UpgradeActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/textView" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/langSpinner"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:spinnerMode="dropdown" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/download"
        android:id="@+id/downloadButton"
        android:layout_above="@+id/nextUpgradeButton"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/navigation_button_values"
        android:onClick="doUpgradeUpgradeClick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextUpgradeButton"
        android:cropToPadding="false"
        android:src="@drawable/arrow_next_4_icon"
        android:maxHeight="@dimen/navigation_button_values"
        android:maxWidth="@dimen/navigation_button_values"
        android:layout_alignParentEnd="false"
        android:clickable="true"
        android:onClick="doUpgradeNextClick"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:baselineAlignBottom="false" />

</RelativeLayout>
